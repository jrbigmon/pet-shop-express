<!DOCTYPE html>
<html lang="en">
<link rel="stylesheet" href="/css/service.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<%- include('../../partials/head') %>

<body>

  <%- include('../../partials/adm/header') %>

    <main>
      <h1 id="service-title"> ATUALIZAR SERVIÇOS </h1>
        <table class="table border-danger">
          
            <thead>
              <tr>
                <th scope="col">Id:</th>
                <th scope="col">Nome:</th>
                <th scope="col">Valor:</th>
                <th scope="col">Ativo:</th>
                <th scope="col">Imagem:</th>
                <th scope="col">Descrição:</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row"> <%= service.id %></th>
                <td> <%= service.name %> </td>
                <td> <%= service.value %> </td>
                <td> <%= service.active %> </td>
                <td>  <% if(service.img.substr(0, 5)== 'https') { %> 
                  <img src="<%= service.img %>" alt=""class="section-img"> 
              <% } else { %>
                  <img src='/images/imgService/<%= service.img %>' alt=""class="section-img"> 
             <% } %> </td>
                <td> <%= service.describ %> </td>
              </tr>
             <form  method="POST" action="/services/adm/update/<%= service.id %>?_method=PUT" enctype="multipart/form-data">
              <tr>
                <th scope="row"></th>
                <td> <input type="text" name="name" placeholder="name" value="<%= service.name %>"> </td>
                <td> <input type="text" name="value" placeholder="valor" value="<%= service.value %>" > </td>
                <td>
                  <label for="ativo"> habilitado 
                    <input type="radio" id="ativo" name="active" value='true' >
                  </label> 
                  <label for="inativo"> Desabilitado
                    <input type="radio" id="inativo" name="active" value='false' > 
                  </label>
                </td>
                <td> 
                  <input type="text" name="img" placeholder="Imagem" value="<%= service.img %>" > 
                  <input type="file" name="img" >
                </td>
                <td> <textarea name="describ" id="" cols="30" rows="5"> <%= service.describ %> </textarea> </td>
              </tr>
              <tr>
               <td> <button type="submit" class="btn btn-success"> Update </button> </td>
               <td> <a href="/services/adm/show" class="btn btn-primary"> Visualizar Todos </a> </td>
              </tr>
             </form>
            </tbody>
          </table>
    </main>
    <%- include('../../partials/footer')  %>
</body>

</html>